extends layout.pug

block content
    form(action='/lists/create' method='post')
        input(type='hidden' name='_csrf' value=csrfToken)
        div
            label(for="title") List Name:
            input(type="text" name="title" required)
        div
            label(for="smart") Smart:
            input(type="checkbox" name="smart")
        div( class="smartOption")
            label(for="includeWord") Include word:
            input(type="text" name="includeWord")
        div(class="smartOption")
            label(for="excludeWord" ) exclude word:
            input(type="text" name="excludeWord")
        div
            button(type='submit' class='btn btn-create-list') Add List
