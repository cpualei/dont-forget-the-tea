extends layout.pug

block content
  h3= list.title
  div
    p Proceed with deleting this list?
  div
    form(action=`/lists/${list.id}/delete` method='post')
      input(type='hidden' name='_csrf' value=csrfToken)
      button(type='submit' class='btn btn-btn-danger') Delete List
      a(class='btn btn-warning ml-2' href=`/lists/${list.id}` role='button') Cancel
