extends layout.pug

block content
    link(rel="stylesheet" href="/stylesheets/index.css")

    form(action='/lists' method='post')
        input(type='hidden' name='_csrf' value=csrfToken)
    each list in lists
        div.todos
            ul#todos
                li
                input#checkbox-1(type='checkbox')
                label(for='checkbox-1') 
                    p= list.title

        button(onclick=`window.location.href='/lists/${list.id}/'` type='submit' class='btn btn-view-list') View List
        button(onclick=`window.location.href='/lists/${list.id}/edit'` type='submit' class='btn btn-edit-list') Edit List
        button(onclick=`window.location.href='/lists/${list.id}/delete'` type='submit' class='btn btn-delete-list') Delete List
    div
        button(onclick="window.location.href='/lists/create'" type='submit' class='btn btn-list-create') Create New List
